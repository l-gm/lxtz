/* header */
.header {
	background: #48525e;
	color: #fff;
}
.header a {
	color: #fff;
}
.sp-page-header {
	margin: 10px 0;
	border: 0;
}
.user-info {
	margin: 36px 10px 0 0;
}
.sp-glyphicon {
	color: #adadad;
}

/* topmenu */
.sp-navbar {
	border-radius: 0;
	margin-bottom: 0;
	border-top: none;
	border-bottom-width: 2px;
}
.sp-navbar-collapse {
	padding-left: 0;
	padding-right: 0;
}


/* leftmenu */
.aside {
	position: absolute;
	margin-right: -180px;
	width: 179px;
	height: 100%;
	background: #3d3d3d;
	background: #E8E9EE;
	background: #f8f8f8;
	overflow-y: auto;
	border-right: 1px solid #C3C3D6;
}
.left-menu {
	padding-top: 16px;
}
.nav-pills>li>a {
	border-radius: 0;
}

/* content */
.content {
	min-width: 100%;
}
.content-container {
	margin-left: 180px;
}


/* 展开/折叠搜索按钮 */
.search-bar-btn {
	margin-bottom: 10px;
}

/* 学生列表 panel */
.sp-panel-body {
	padding: 8px 12px;
}
.sp-panel-footer {
	background-color: #fff;
	text-align: center;
}
/* 学生列表 table */
.sp-table {
	margin-bottom: 0;
}
.sp-table>tbody>tr>td {
	border: none;
}
.sp-form-group {
	margin-bottom: 0;
}

.a-margin-15 {
	margin-bottom: 12px;
}
.a-margin-15 a{
	margin-left: 15px;
}
textarea,
input[type=text],
select {
	display: block;
	width: 70%;
	height: 34px;
	padding: 6px 12px;
	font-size: 14px;
	line-height: 1.42857143;
	color: #555;
	background-color: #fff;
	background-image: none;
	border: 1px solid #ccc;
	border-radius: 4px;
	-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
	box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
	-webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
	-o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
	transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
}
textarea {
	width: 95%;
}


/* IE8  */
.navbar-nav > li { float: left \9; }

.navbar-toggle { display: none \9; }
.collapse {
  display: block \9;
  visibility: visible \9;
}
.navbar-collapse {
visibility: visible \9;
}